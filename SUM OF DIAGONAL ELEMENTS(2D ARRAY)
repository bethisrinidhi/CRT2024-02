SUM OF DIAGONAL ELEMENTS:(2D ARRAY)

int main() {
    // Write C code here
    int n;
    scanf("%d",&n);
    int a[n][n];
    int i,j;
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            scanf("%d",&a[i][j]);
        }
    }
     int s=0;
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            if(i==j){
            s=s+a[i][j];
        }
    }
    }
        printf("sum=%d",s);

    return 0;
}
