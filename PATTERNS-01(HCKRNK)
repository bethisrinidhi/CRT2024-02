PATTERNS-01(HACKERRANK):

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n;
    scanf("%d",&n);
    int i,j;
    for(i=n;i>=1;i--){
        int s=n-i;
        for(int w=1;w<=s;w++){
            printf(" ");
        }
        for(j=1;j<=i;j++){
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
