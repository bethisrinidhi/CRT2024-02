COSMETIC COMPANY(HACKERRANK):LOOPS

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
  int n,r,min=9;
    scanf("%d",&n);
    while(n>0){
        r=n%10;
        n=n/10;
        if(r<min){
            min=r;
        }
    }
     printf("%d",min);  
    return 0;
}
