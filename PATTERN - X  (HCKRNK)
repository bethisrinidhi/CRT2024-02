PATTERN X-(HACKERRANK):

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int i, j;

    int n;
scanf("%d",&n);

    for (i=1;i<=n;i++) {
        for (j=1;j<=n;j++) {
            if (j==i||(j ==n-i+1)) {
                printf("*");
            }
            else {
                printf(" ");
            }
        }

        printf("\n");
}

    return 0;
}
