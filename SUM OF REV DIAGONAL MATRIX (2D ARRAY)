SUM OF REVERSE DIAGONAL MATRIX:-(2D ARRAY):

#include <stdio.h>

int main() {
    // Write C code here
    int n;
    scanf("%d",&n);
    int a[n][n];
    int i,j;
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            scanf("%d",&a[i][j]);
        }
    }
     int s=0;
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            if(i+j==n-1){
            s=s+a[i][j];
        }
    }
    }
        printf("sum=%d",s);
    
     
    

    return 0;
}
